#include <stdio.h>
int main()
{
int i, n, r;
int fact;

printf ("Calculadora del factorial de un numero\n");
r=1;

 while(r == 1)
    {
    printf("Ingresa un numero para calcular su factorial:");
    scanf("%d", &n);

    fact=1;
    for (i = 1; i <= n; i++){
        fact = fact * i;}
    printf("Factorial de %d es: %d\n", n, fact);

    printf ("Quieres hacer el calculo para otro numero? 1)SI 2)NO ");
    scanf ("%d", &r);
    }
printf("Gracias por usar la calculadora del factorial de un numero \n");
return 0;
}
